<div class="sub-container">
<div class="row">
  <div class="panel panel-default">
    <div class="panel-body">
      <form method="POST" action="/login" role="form">
        <div class="form-group">
          <h2>Log in</h2>
        </div>

        <div class="form-group">
          <label class="control-label" for="loginEmail">Email</label>
          <input 
            id="loginEmail"
            name="loginEmail"
            type="email"
            maxlength="50"
            class="form-control"
            placeholder="Your Email" 
            autocomplete="email"
            autofocus 
            required />
        </div>

        <div class="form-group">
          <label class="control-label" for="loginPassword">Password</label>
          <input 
            id="loginPassword"
            name="loginPassword"
            type="password"
            maxlength="25"
            class="form-control"
            placeholder="Your password"
            length="40"
            required />
        </div>

        <div class="form-group">
          <a href="/forgot-password">Forgot password?</a>
        </div>

        <div class="form-group">
          <button id="loginSubmit" type="submit" class="btn btn-info btn-block pledge-button">Log me in!</button>
        </div>
        <hr>
        <p></p>New to KickstarterClone? <a href="/signup" class="auth-link ">Sign up!</a></p>
      </form>
    </div>
  </div>
</div>
</div>
